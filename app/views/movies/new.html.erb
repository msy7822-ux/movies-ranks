<%= provide(:title, '映画の追加') %>

<div class="form bg-light p-5 mt-1 rounded">
    <%= form_with scope: :movie, url: movies_create_path, local: true do |f| %>

        <div class="form-group">
            <%= f.label :title, 'タイトル' %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :story, 'あらすじ' %>
            <%= f.text_area :story, class: 'form-control', rows: "7" %>
        </div>

        <div class="form-group">
            <%= f.label :image, 'ファイル' %>
            <br />
            <%= f.file_field :image %>
        </div>

        <%= f.submit '追加する', class: 'btn btn-primary' %>
    <% end %>
</div>